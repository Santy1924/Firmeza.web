@model IEnumerable<Firmeza.web.Data.Entity.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
    Layout = "~/Views/Shared/LayoutDashboard.cshtml";
}

<h1 class="mb-4 text-center">ðŸ“¦ Listado de productos</h1>

<!-- ðŸ”¹ Mensajes de Ã©xito / error -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<!-- ðŸ” Formulario de bÃºsqueda y filtrado -->
<form method="get" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
               class="form-control" placeholder="Buscar por nombre o descripciÃ³n..." />
    </div>
    
    <div class="col-md-3">
        <select name="categoriaFiltro" class="form-select">
            <option value="">-- Todas las categorÃ­as --</option>
            @foreach (var cat in (SelectList)ViewData["Categorias"])
            {
                <option value="@cat.Text" selected="@(Context.Request.Query["categoriaFiltro"] == cat.Text)">
                    @cat.Text
                </option>
            }
        </select>
    </div>

    <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>

<!-- ðŸ”¹ Acciones principales -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo producto
    </a>

    <!-- ðŸ“¥ Formulario de carga desde Excel -->
    <form asp-action="CargarExcel" method="post" enctype="multipart/form-data" class="d-flex align-items-center gap-2">
        <input type="file" name="archivoExcel" class="form-control form-control-sm" accept=".xlsx,.xls" required />
        <button type="submit" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-upload"></i> Cargar desde Excel
        </button>
    </form>
</div>

<!-- ðŸ“‹ Tabla de productos -->
<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioUnitario)</th>
            <th>CategorÃ­a</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No se encontraron productos.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>$@item.PrecioUnitario</td>
                    <td>@item.Categoria</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



